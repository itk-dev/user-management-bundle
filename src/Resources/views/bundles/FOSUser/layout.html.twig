{% trans_default_domain 'FOSUserBundle' %}
<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <title>{{ block('page_title') }}</title>
</head>
<body>
<div class="container">
    <div class="row justify-content-center mt-5 mb-3">
        <img src="//placehold.it/100x100&text=Logo" alt="Logo">
        {# <img src="{{ site_url }}/{{ site_logo_path }}" alt="Logo"> #}

    </div>
    <div class="row justify-content-center">
        <div class="col col-md-4">
            <h1 class="text-center">Site name</h1>
            {# <h1>{{ site_name }}</h1> #}
            <p class="text-center lead mb-3">Lead text description</p>
            {# <p class="text-center lead mb-3">{{ site_description }} </p>#}
            {% block fos_user_content %}{% endblock %}
        </div>
    </div>
</div>

</body>
</html>
